{
	"include": ["lib/**.ts"],
	"compilerOptions": {
		"rootDir": "lib",
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true,
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"lib": [
			"DOM",
			"ES2022",
		],
	}
}